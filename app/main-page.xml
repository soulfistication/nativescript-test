<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <GridLayout>
        <ListView items = "{{ posts }}">
            <ListView.itemTemplate>
                <StackLayout>
                    <Image src="{{ thumbnail}}" width="100" height="100"></Image>
                    <Label text = "{{ title }}"></Label>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </GridLayout>
</Page>
